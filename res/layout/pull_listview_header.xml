<LinearLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">
	<RelativeLayout 
   	android:layout_width="fill_parent"
   	android:layout_height="60.0dip">
   		<TextView 
   		android:id="@+id/tv_refresh_time"
   		android:layout_width="180.0dip"
   		android:layout_height="20.0dip"
   		android:layout_marginBottom="5.0dip"
   		android:layout_alignParentBottom="true"
   		android:layout_centerHorizontal="true"
   		android:gravity="center"
   		android:textColor="@android:color/black"
   		android:textSize="12.0sp"/>
   		<TextView 
   		android:id="@+id/tv_refresh_msg"
   		android:layout_width="180.0dip"
   		android:layout_height="30.0dip"
   		android:layout_above="@id/tv_refresh_time"
   		android:gravity="center"
   		android:layout_centerHorizontal="true"
   		android:textColor="@android:color/black"
   		android:textSize="18.0sp"/>
   	    <ImageView 
   	    android:id="@+id/iv_refresh_arrow"
   	    android:layout_width="50.0dip"
   		android:layout_height="50.0dip"
   		android:layout_toLeftOf="@id/tv_refresh_time"
   		android:layout_alignBottom="@id/tv_refresh_time"
   		android:contentDescription="@null"
   		android:src="@drawable/img_refresh_arrow"
   		android:scaleType="centerInside"/>
   	    <ProgressBar  
   	    android:id="@+id/pb_refresh"
	    android:layout_width="20.0dip"  
	    android:layout_height="20.0dip" 
	    android:visibility="gone"
	    android:layout_marginRight="15.0dip"
	    android:layout_centerVertical="true" 
	    android:layout_toLeftOf="@id/tv_refresh_time"
	    style="?android:attr/progressBarStyleSmall"  
	    android:indeterminateDrawable="@drawable/small_progress"/>
   	</RelativeLayout>
</LinearLayout>
