<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFFEE"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/regsiter_rel_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_title_top" >

        <TextView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="22dp" />

        <Button
            android:id="@+id/addpassword_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/but_back" />
    </RelativeLayout>

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regsiter_rel_1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="注册账号，请输入一个密码 6-8位"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/tt1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/regsiter_rel_2"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_edite_middle" >

            <TextView
                android:id="@+id/pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:background="@drawable/t_q"
                android:gravity="center"
                android:text="密    码"
                android:textColor="#000000"
                android:visibility="gone" />

            <EditText
                android:id="@+id/addpassword_pw"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/pw"
                android:background="#00000000"
                android:hint="请输入你的密码"
                android:paddingLeft="5dp"
                android:password="true"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imgs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/regsiter_rel_2"
            android:background="@drawable/red_line_hen"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/imgs"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:visibility="gone" >

            <TextView
                android:id="@+id/yazhengm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="验证码："
                android:textColor="#000000" />

            <EditText
                android:id="@+id/addpassword_yanzheng"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toLeftOf="@+id/get_yanzhengma"
                android:layout_toRightOf="@+id/yazhengm"
                android:background="#f0f0f0"
                android:hint="请输入验证码"
                android:paddingLeft="5dp"
                android:password="true"
                android:singleLine="true"
                android:textSize="14sp" />

            <Button
                android:id="@+id/get_yanzhengma"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/button_noamal"
                android:text="获取验证码"
                android:textColor="#f0f0f0" />
        </RelativeLayout>
    </LinearLayout>

