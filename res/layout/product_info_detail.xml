<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FEFFEE"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/main_rel_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_title_top" >

        <TextView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:text="门店详细内容"
            android:textColor="#ffffff"
            android:textSize="22dp" />

        <Button
            android:id="@+id/messagedetail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/zuola" />
    </RelativeLayout>

    <com.android.zmark.wigets.MyScollerView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/message_bg"
            android:gravity="center_horizontal" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/messagedetail_info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="妈妈育儿讲堂"
                    android:textColor="#ED621C"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/messagedetail_line"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/messagedetail_info_title"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/red_line_hen" />

                <RelativeLayout
                    android:id="@+id/messgedetail_rel_c"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/messagedetail_line"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:id="@+id/messagedetail_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:text="来源：官方"
                        android:textColor="#ED621C"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/messagedetail_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="2013-3-14 11:00"
                        android:textColor="#ED621C"
                        android:textSize="16sp"
                        android:visibility="gone" />
                </RelativeLayout>

                <!--
             <LinearLayout 
            android:layout_below="@+id/messgedetail_rel_c"
            android:id="@+id/messagedetail_img"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="#0000"
            
            />
                -->

                <FrameLayout
                    android:id="@+id/main_viewpager_lin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/messgedetail_rel_c"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" >

                    <android.support.v4.view.ViewPager
                        android:id="@+id/main_viewpager"
                        android:layout_width="fill_parent"
                        android:layout_height="160dp"
                        android:layout_gravity="center"
                        android:focusable="true"
                        android:scaleType="fitXY" >
                    </android.support.v4.view.ViewPager>

                    <LinearLayout
                        android:id="@+id/ll_dot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_horizontal|bottom"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </FrameLayout>

                <TextView
                    android:id="@+id/messagedetail_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/main_viewpager_lin"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:text="爱婴斯坦曾经说过"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/messagedetail_info" />
            </RelativeLayout>
        </RelativeLayout>
    </com.android.zmark.wigets.MyScollerView>

</LinearLayout>